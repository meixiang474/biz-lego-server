{
  "name": "biz-lego-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=dev pm2 start bin/pm2-prd-dev.config.js",
    "dev": "cross-env NODE_ENV=dev ./node_modules/.bin/nodemon bin/www",
    "prd-dev": "cross-env NODE_ENV=prd_dev pm2 start bin/pm2-prd-dev.config.js",
    "prd": "pm2 start bin/www",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand  --passWithNoTests --colors --forceExit",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand  --passWithNoTests --colors --forceExit",
    "commitlint": "commitlint -e",
    "lint": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "ajv": "^8.4.0",
    "axios": "^0.21.1",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.1",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "koa2-cors": "^2.0.6",
    "mongoose": "^5.12.9",
    "mysql2": "^2.2.5",
    "pug": "^3.0.2",
    "redis": "^3.1.2",
    "require-all": "^3.0.0",
    "sequelize": "^6.6.2",
    "simple-git": "^2.39.0",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-config-alloy": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^26.6.3",
    "nodemon": "^1.19.1",
    "prettier": "^2.3.0",
    "simple-git-hooks": "^2.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm run test:local",
    "commit-msg": "npm run commitlint"
  }
}
